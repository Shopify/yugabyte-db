              },
              "fileName": {
                "type": "string",
                "pattern": "^(/[^/]+)+$"
              },
              "scrapeInterval": {
                "type": "integer"
              },
              "evaluationInterval": {
                "type": "integer"
              },
              "scrapeTimeout": {
                "type": "integer"
              },
              "privateIp": {
                "type": "string",
                "format": "ipv4"
              },
              "externalPort": {
                "type": "integer"
              }
            },
            "required": [ "name", "fileName", "scrapeInterval", "evaluationInterval",
          "scrapeTimeout", "privateIp", "externalPort"]
        },
